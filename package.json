{
  "name": "valideer-monorepo",
  "version": "0.1.0",
  "description": "Middleware for validating and parsing express and koa request body, url and query parameters",
  "author": "Liam Ederzeel",
  "license": "MIT",
  "repository": "https://github.com/LiamEderzeel/valideer",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npx lerna run build",
    "build:tsc": "tsc --build --verbose"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@types/koa": "^2.13.12",
    "@types/node": "^20.10.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "lerna": "^8.0.0",
    "prettier": "^3.1.0",
    "semantic-release": "^22.0.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "release": {
    "repositoryUrl": "https://github.com/LiamEderzeel/valideer",
    "plugins": "@semantic-release/npm",
    "extends": "semantic-release-monorepo",
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "channel": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "channel": "alpha",
        "prerelease": true
      }
    ]
  }
}
